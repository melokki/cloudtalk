  "type": "module",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "rm -rf ./dist && rollup -c ",
    "dev": "nodemon --ext ts --exec tsx src/app.ts | pino-pretty --colorize",
    "generate": "prisma generate --schema='../../database/prisma/schema.prisma' && rm -rf ./database && mkdir -p ./database && cp -r ../../database/generated/* ./database",
    "migrate": "cross-env $(cat ./../../.env | xargs) prisma migrate dev --schema='../../database/prisma/schema.prisma'",
    "deploy": "npx prisma migrate deploy --schema='./prisma/schema.prisma'"
  },
  "files": [
    "dist",
    "package.json",
    "node_modules"
  ],
  "license": "ISC",
